{
    "name": "ssm-commander",
    "description": "CLI tool to simplify the management and execution of AWS SSM commands. Easily create, list, and run your SSM commands with an interactive prompt.",
    "version": "0.1.0",
    "main": "index.js",
    "scripts": {
        "start": "node build/index.js",
        "start:prod": "node dist/index.js",
        "build": "tsc && node esbuild.mjs",
        "lint": "eslint src/**/*.ts",
        "format": "prettier --write src/**/*.ts"
    },
    "dependencies": {
        "@inquirer/prompts": "^5.5.0",
        "commander": "^12.1.0",
        "ora": "^8.1.0"
    },
    "devDependencies": {
        "@types/node": "^22.5.4",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "esbuild": "^0.23.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard-with-typescript": "^43.0.1",
        "eslint-plugin-import": "^2.30.0",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-promise": "^6.6.0",
        "prettier": "^3.3.3",
        "typescript": "^5.6.2"
    }
}
